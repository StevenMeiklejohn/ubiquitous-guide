

<form action="/pizzas/<%= @pizza.id %>" method="post">
<input type="hidden" name="_method" value="put">

<label for="first_name">First name:</label>
<input type="text" name="first_name" value="<%= @pizza.first_name %>"></input>
<label for="last_name">Last name:</label>
<input type="text" name="last_name" value="<%= @pizza.last_name %>"></input>

<label for="topping">Select a pizza:</label>

<select name="topping">
<option value="margherita" <%= 'selected' if @pizza.topping == 'margherita' %>>Margehritta</option>
<option value="pepperoni" <%= 'selected' if @pizza.topping == 'pepperoni' %>>Pepperoni</option>
</select>

<label for="quantity">Quantity</label>
<input type="number" name="quantity" value="<%= @pizza.quantity %>"></input>

<input type="submit" value="Order Pizza"></input>
</form>



<form action="/pizzas/<%= @pizza.id %>" method="post">
<input type="hidden" name="_method" value="delete">
<input type="submit" value="Delete Pizza"></input>
</form>




